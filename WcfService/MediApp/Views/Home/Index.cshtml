@{
    ViewBag.Title = "Strona domowa";
}
@Scripts.Render("~/bundles/js-image-slider")


<div class="text-center">
    <div class="row ">
        <div class="center-container">
            <div class="col-md-6">
                <h1 id="header">MediApp</h1>
            </div>
            <div class="col-md-6">
                <img src="~/Content/images/symbol.png" id="symbol" />
            </div>
        </div>
    </div>
    <p>
        <div id="sliderFrame">
            <div id="slider">
                <img src="~/Content/images/sick.jpg" class="imagemain" />
                <img src="~/Content/images/cancer.jpg" class="imagemain" />
                <img src="~/Content/images/care.jpg" class="imagemain"/>
                <img src="~/Content/images/money.jpg" class="imagemain" />
            </div>
        </div>
    </p>
    <div class="row">
        <div class=".center-container">
            <div class="col-md-5">
                <h2>Masz już konto?</h2>
                <p>
                    Przejdź do strony logowania
                </p>
                <p>@Html.ActionLink("Zaloguj się", "../Account/Login", new { }, new { @class = "btn btn-primary btn-lg" })</p>
            </div>
            <div class="col-md-5">
                <h2>Nie posiadasz konta?</h2>
                <p>
                    Załóż konto już teraz, to potrwa tylko chwilę.
                </p>
                <p>@Html.ActionLink("Zarejestruj się", "../Account/Register", new { }, new { @class = "btn btn-primary btn-lg" })</p>
            </div>
        </div>
    </div>
 </div>
