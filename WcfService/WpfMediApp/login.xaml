<Window x:Class="WpfMediApp.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMediApp"
        mc:Ignorable="d"
        Title="Logowanie" Height="200" Width="300" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
    <Grid>
        <Label x:Name="label" Content="Email" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Width="52" FontSize="16"/>
        <Label x:Name="label1" Content="Hasło" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="52" FontSize="16"/>
        <TextBox x:Name="textBoxEmail" HorizontalAlignment="Left" Height="25" Margin="67,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="195"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="67,64,0,0" VerticalAlignment="Top" Width="195" Height="25"/>
        <TextBlock Height="23" HorizontalAlignment="Left" x:Name ="errormessage" VerticalAlignment="Top" Width="247" Foreground="#FFE5572C" Margin="19,104,0,0"/>
        <Button x:Name="button" Content="Zaloguj" HorizontalAlignment="Left" Margin="207,139,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</Window>
